<% provide(:title, @user.displayName) %>
<div class="row">
	<aside class="span4">
	    <section>
	      <h1>
	        <%= @user.name %>
	      </h1>
	    </section>
	    <section>
	      <%= render 'shared/stats' %>
	    </section>
  	</aside>
	<div class="span8">
	    <%= render 'follow_form' if signed_in? %>
	</div>
	<div class="span8">
	    <% if @user.microposts.any? %>
	      <h3>My feed (<%= @user.microposts.count %>)</h3>
	      <ol class="microposts">
	        <%= render @microposts %>
	      </ol>
	      <%= will_paginate @microposts %>
	    <% end %>
	</div>
</div>